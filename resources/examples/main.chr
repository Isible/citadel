# entry label marks the entry point for any citadel IR
extern print

'entry: {
    call %main()
}

@main() priv i32 {
    ?bar priv i8 = l{69}
    call %print(l{"Hello World"})
}

# `*` means that the value is a pointer
@myFunc(someArg *i32) priv i32 {
    $foo priv i8 = l{59}
    # `^` to create a pointer
    $bar priv *i8 = ^foo
    # `~` to dereference a pointer
    ret ~someArg
}