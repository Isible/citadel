# entry label marks the entry point for any citadel IR
extern print

'entry: {
    call %main()
}

func @main() i32 {
    ?bar i8 = l{69}
    call %print(l{"Hello World"})
}

# `*` means that the value is a pointer
func @myFunc($someArg *i32) i32 {
    $foo i8 = l{59}
    # `^` to create a pointer
    $bar *i8 = ^foo
    # `~` to dereference a pointer
    ret ~someArg
}